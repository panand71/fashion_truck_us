
<h1>Fashion Truck US Mobile Boutique Listing</h1>

<% form_tag boutiques_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <div class="row"><tr>
         <div class="col-sm-2" style="background-color:lavender;"><th>Name</th></div>  
         <div class="col-sm-8" style="background-color:lavenderblush;"><th>Website</th></div>
        </tr>
      </thead>

      <tbody>
        <% @boutiques.each do |boutique| %>
        <tr class="row-links">
          <td><%= link_to boutique.name, boutique %></td>
          <td><%= boutique.website %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

