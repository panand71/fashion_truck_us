<h1>Mobile Boutique Owners</h1>
<div class="media">
  <div class="media-body">
    <table class="table table-hover">
      <thead>
        <div class="row"><tr>
         <div class="col-sm-3" style="background-color:lavender;"><th>Name</th></div>  
         <div class="col-sm-3" style="background-color:lavenderblush;"><th>Email</th></div>
         <div class="col-sm-3" style="background-color:lavenderblush;"><th>Phone</th></div>
        </tr>
      </thead>

  <tbody>
    <% @owners.each do |owner| %>
      <tr>
        <td><%= owner.name %></td>
        <td><%= owner.email %></td>
        <td><%= owner.phone %></td>
        <td><%= link_to 'Show', owner %></td>
        <td><%= link_to 'Edit', edit_owner_path(owner) %></td>
        <td><%= link_to 'Destroy', owner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>

      </tbody>
    </table>
  </div>
</div>


  </tbody>
</table>

